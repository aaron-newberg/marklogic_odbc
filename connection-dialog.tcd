    <authentication-mode value='Basic' />
    <authentication-options>
      <option name="UsernameAndPassword" default="true" />
    </authentication-options>
	<db-name-prompt value='Database: ' />
	<port-prompt value="Port: " default="5432" />
    <show-ssl-checkbox value="false" />
  </connection-config>
</connection-dialog>
